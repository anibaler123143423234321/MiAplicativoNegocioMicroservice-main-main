<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="94dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:contentDescription="Imagen del producto"
        android:src="@drawable/ic_documento"
        android:background="@drawable/shadow_bg" />



    <!-- Espacio entre la imagen y el texto -->
    <View
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <!-- Elementos de texto: Nombre, Precio y Stock -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Título: Nombre del Producto -->
        <TextView
            android:id="@+id/txtTituloNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Nombre del producto dinámico"
            android:textSize="14sp" />

        <!-- Título: Precio del Producto -->
        <TextView
            android:id="@+id/txtTituloPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Precio del Producto -->
        <TextView
            android:id="@+id/txtPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Precio del producto dinámico"
            android:textSize="14sp" />

        <!-- Título: Stock del Producto -->
        <TextView
            android:id="@+id/txtTituloStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Stock del Producto -->
        <TextView
            android:id="@+id/txtStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Stock del producto dinámico"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Espacio entre el texto y los botones -->
    <View
        android:layout_width="16dp"
        android:layout_height="match_parent" />

    <!-- Botones "Comprar" y "Añadir al carrito" -->
    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnComprar"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="Comprar"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAnadirCarrito"
            android:layout_width="54dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add_shop"
            android:contentDescription="Botón para comprar el producto"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
